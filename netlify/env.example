# Variables de entorno para Netlify
# Configura estas variables en el dashboard de Netlify

# OpenAI API Key (REQUERIDO)
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de la aplicación
NODE_ENV=production
REACT_APP_API_URL=/.netlify/functions/api

# Configuración de build
NODE_VERSION=18
NPM_VERSION=9

# Configuración de PWA
REACT_APP_PWA_NAME=Teología Reformada Chat
REACT_APP_PWA_SHORT_NAME=TeologíaChat
REACT_APP_PWA_DESCRIPTION=Asistente de IA especializado en teología reformada

# Configuración de analytics (opcional)
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id
REACT_APP_HOTJAR_ID=your_hotjar_id

# Configuración de notificaciones (opcional)
REACT_APP_VAPID_PUBLIC_KEY=your_vapid_public_key
